<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

    <EditText
        android:padding="5dp"
        android:id="@+id/uprtvname"
        android:hint="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"/>
    <EditText
        android:id="@+id/uprtvcontact"
        android:padding="5dp"
        android:hint="Contact"
        android:maxLength="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"/>
    <EditText
        android:id="@+id/uprtvemail"
        android:padding="5dp"
        android:hint="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"/>
    <EditText
        android:id="@+id/uprtvpass"
        android:padding="5dp"
        android:hint="Pass"
        android:minEms="6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"/>
    <EditText
        android:id="@+id/uprtvbirth"
        android:padding="5dp"
        android:hint="BirthDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"/>
    <EditText
        android:id="@+id/uprtvclg"
        android:padding="5dp"
        android:hint="College Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/uprtvgender"
        android:padding="5dp"
        android:hint="Gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/uprtvtech"
        android:padding="5dp"
        android:hint="Technology"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/uprtvduration"
        android:padding="5dp"
        android:hint="Duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/uprtvsem"
        android:padding="5dp"
        android:hint="Semester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/uprtvdegree"
        android:padding="5dp"
        android:hint="Degree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/uprtvproname"
        android:padding="5dp"
        android:hint="Project Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/uprtvgrp1"
        android:padding="5dp"
        android:hint="Member Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/uprtvgrp2"
        android:padding="5dp"
        android:hint="Member Name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/uprtvguide"
        android:padding="5dp"
        android:hint="Guide Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/uprtvjoin"
        android:padding="5dp"
        android:hint="Join Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"/>
    <EditText
        android:id="@+id/uprtvend"
        android:padding="5dp"
        android:hint="End Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"/>
    <EditText
        android:id="@+id/uprtvtool"
        android:padding="5dp"
        android:hint="Tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        android:background="#d67601"
        android:text="Reset"
        android:textColor="#fff"
        android:textSize="18sp"
        android:id="@+id/btn_up_update"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>