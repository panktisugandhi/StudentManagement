<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

    <EditText
        android:padding="5dp"
        android:id="@+id/uprtvname"
        android:hint="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/uprtvcontact"
        android:padding="5dp"
        android:hint="Contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/uprtvemail"
        android:padding="5dp"
        android:hint="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/uprtvpass"
        android:padding="5dp"
        android:hint="Pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/uprtvbirth"
        android:padding="5dp"
        android:hint="BirthDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/uprtvclg"
        android:padding="5dp"
        android:hint="College Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/uprtvgender"
        android:padding="5dp"
        android:hint="Gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/uprtvtech"
        android:padding="5dp"
        android:hint="Technology"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/uprtvduration"
        android:padding="5dp"
        android:hint="Duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/uprtvsem"
        android:padding="5dp"
        android:hint="Semester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/uprtvdegree"
        android:padding="5dp"
        android:hint="Degree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/uprtvproname"
        android:padding="5dp"
        android:hint="Project Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/uprtvgrp1"
        android:padding="5dp"
        android:hint="Member Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/uprtvgrp2"
        android:padding="5dp"
        android:hint="Member Name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/uprtvguide"
        android:padding="5dp"
        android:hint="Guide Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/uprtvjoin"
        android:padding="5dp"
        android:hint="Join Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/uprtvend"
        android:padding="5dp"
        android:hint="End Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/uprtvtool"
        android:padding="5dp"
        android:hint="Tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/btn_edit"
        android:text="update"
        android:id="@+id/btn_up_update"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>